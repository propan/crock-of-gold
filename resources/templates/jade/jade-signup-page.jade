extends layout

block title
    | clj-jade :: Demo

block top-navigation
    mixin top-nav('clj-jade')

block content
    h1 clj-jade
    mixin navigation-pills('form')
    .example-content
        .expand.col-lg-8.col-lg-offset-2
            if success
                .alert.alert-success
                    | You are a great person, #{name}!
            .col-lg-10.col-lg-offset-1
                form(method='POST', action='/clj-jade', accept-charset='UTF-8')
                    fieldset
                        legend Sign up
                        mixin form-input('text', 'username', 'Username:', 'Username', data.username, dataErrors.username)
                        mixin form-input('text', 'email', 'Email:', 'bob@the-bobs.com', data.email, dataErrors.email)
                        mixin form-input('password', 'password', 'Password:', 'Password', data.password, dataErrors.password)
                        .form-group
                            button(type='submit', class='btn btn-default btn-block') Sign up